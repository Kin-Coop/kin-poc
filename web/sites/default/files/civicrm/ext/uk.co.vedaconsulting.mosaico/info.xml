<?xml version="1.0"?>
<extension key="uk.co.vedaconsulting.mosaico" type="module">
  <file>mosaico</file>
  <name>Mosaico</name>
  <description>Integration with mosaico templates builder. Allows building civi message templates using mosaico template builder.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Matthew Wire (MJW), deepak-srivastava</author>
    <email>mjw@mjwconsult.co.uk, deepak@mountev.co.uk</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://civicrm.org/extensions/email-template-builder</url>
    <url desc="Documentation">https://docs.civicrm.org/mosaico/en/latest</url>
    <url desc="Release Notes">https://docs.civicrm.org/mosaico/en/latest/releasenotes/</url>
    <url desc="Support">https://github.com/veda-consulting-company/uk.co.vedaconsulting.mosaico/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-07-09</releaseDate>
  <version>3.8.1752072010</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>6.0</ver>
  </compatibility>
  <smarty_compatibility>
    <ver>5</ver>
  </smarty_compatibility>
  <php_compatibility>
    <ver>8.1</ver>
    <ver>8.2</ver>
    <ver>8.3</ver>
    <ver>8.4</ver>
  </php_compatibility>
  <comments>To help contribute please contact us on support@vedaconsulting.co.uk or initiate a conversation / issue on github.</comments>
  <civix>
    <namespace>CRM/Mosaico</namespace>
    <format>25.01.1</format>
  </civix>
  <classloader>
    <psr0 prefix="CRM_" path=""/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <mixins>
    <mixin>ang-php@1.0.0</mixin>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
  <upgrader>CiviMix\Schema\Mosaico\AutomaticUpgrader</upgrader>
</extension>
